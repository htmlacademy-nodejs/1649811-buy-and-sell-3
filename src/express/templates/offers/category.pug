extends ../layout

block content
  main.page-content
    include ../partials/categories

    section.tickets-list
      h2.visually-hidden Предложения из категории #{categoryWithOffers.title}
      .tickets-list__wrapper
        .tickets-list__header
          p.tickets-list__title
            | #{categoryWithOffers.title}
            b.js-qty #{categoryWithOffers.count}
        ul
          each offer in categoryWithOffers.offers
            li.tickets-list__item
              .ticket-card.ticket-card--color01
                .ticket-card__img
                  img(src=`/img/${offer.picture}` alt=offer.title)
                .ticket-card__info
                  +ticketLabel(offer.type)
                  .ticket-card__categories
                    +categoriesLinks(offer.categories)
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href=`/offers/${offer.id}`) #{offer.title}
                    p.ticket-card__price
                      span.js-sum #{offer.sum}
                      |  ₽
                  .ticket-card__desc
                    p #{offer.description}

