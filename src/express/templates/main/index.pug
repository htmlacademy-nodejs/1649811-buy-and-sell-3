extends ../layout

block content
  main.page-content
    include ../partials/categories
    section.tickets-list
      h2.visually-hidden Самые новые предложения
      .tickets-list__wrapper
        .tickets-list__header
          p.tickets-list__title Самое свежее
        ul
          each ad in ads
              li.tickets-list__item
                .ticket-card.ticket-card--color01
                  .ticket-card__img
                    img(src=`/img/${ad.picture}` alt=ad.title)
                  .ticket-card__info
                    +ticketLabel(ad.type)
                    .ticket-card__categories
                      +categoriesLinks(ad.category)
                    .ticket-card__header
                      h3.ticket-card__title
                        a(href='#') #{ad.title}
                      p.ticket-card__price
                        span.js-sum #{ad.sum}
                        |  ₽
                    .ticket-card__desc
                      p #{ad.description}
